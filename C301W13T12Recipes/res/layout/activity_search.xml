<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         tools:context=".view.SearchActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/view_edit_share_banner" >

            <MultiAutoCompleteTextView
                android:id="@+id/keyword_autoCompleteTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/search_hint_please_type"
                android:maxLines="1"
                android:textColor="#FFFFFF" >

                <requestFocus />
            </MultiAutoCompleteTextView>

            <ImageButton
                android:id="@+id/search_imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@android:drawable/ic_search_category_default" />

            <ImageButton
                android:id="@+id/search_option_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/view_menu_share_button_light" />
        </LinearLayout>

        <ListView
            android:id="@+id/searchResult_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
        </ListView>

    </LinearLayout>
