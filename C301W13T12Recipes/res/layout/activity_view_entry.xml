<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ViewDetailedRecipeActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/view_edit_share_banner"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/view_share_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@drawable/view_menu_share_button_light" />

        <ImageButton
            android:id="@+id/view_edit_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/view_share_imageButton"
            android:background="@null"
            android:src="@drawable/view_menu_compose_button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="Photos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <Gallery
        android:id="@+id/view_entry_gallery"
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:background="@drawable/gallery_banner"
        android:fitsSystemWindows="true" />

    <TextView
        android:id="@+id/view_textView_title_bar"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@drawable/view_ingredients_banner"
        android:text="		Title"
        android:textColor="#FFFFFF"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/view_textView_title"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:textSize="10pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@drawable/view_ingredients_banner"
        android:text="		Ingredients"
        android:textColor="#FFFFFF"
        android:textSize="10pt" />

    <ListView
        android:id="@+id/view_ingredients_listView"
        android:layout_width="match_parent"
        android:layout_height="90dp" >
    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@drawable/view_ingredients_banner"
        android:text="		Description"
        android:textColor="#FFFFFF"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/view_textView_description"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>