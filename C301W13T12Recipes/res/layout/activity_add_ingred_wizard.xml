<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wizard_step2_bg"
    android:orientation="vertical" 
    android:noHistory= "true">

    <ImageView
        android:id="@+id/imageView_navi_step2"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:src="@drawable/navi_step2" />

    <ImageButton
        android:id="@+id/imgBtn_add_ingredient_button"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_marginLeft="600px"
        android:background="#00000000"
        android:src="@drawable/step2_add_button_release" />

    <ListView
        android:id="@+id/listView_ingredients_list"
        android:layout_width="342dp"
        android:layout_height="307dp"
        android:layout_marginLeft="41px"
        android:layout_marginRight="34px"
        android:layout_weight="0.31" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.49"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp" >

            <Button
                android:id="@+id/add_step1_Clear_button"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="Clear" />

            <Button
                android:id="@+id/add_step1_next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>