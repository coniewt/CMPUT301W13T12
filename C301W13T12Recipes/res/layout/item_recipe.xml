<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ViewListActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
       >

        <ImageView
            android:id="@+id/item_recipe_image"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@drawable/view_listview_no_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#120A2A"
                android:text="Recipe"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/item_recipe_direction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0F8F7"
                android:text="Directions" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>